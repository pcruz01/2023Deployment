  <script>
    function showCard(n1, n2) {
        let current = "card" + n1;
        let desired = "card" + n2;

        // Hide the current card
        document.getElementById(current).setAttribute("hidden", true);

        // Remove "hidden" for the desired card
        document.getElementById(desired).removeAttribute("hidden");
    }

    function unhideAllCards() {
        // Get all cards and remove the "hidden" attribute
        const allCards = document.querySelectorAll('.card');
        allCards.forEach(card => {
            card.removeAttribute("hidden");
        });
    }

    document.addEventListener('DOMContentLoaded', function () {
        // Add click event listener to the submit button
        const submitButton = document.querySelector('button[type="submit"]');
        submitButton.addEventListener('click', function (event) {
            // Unhide all cards before submitting the form
            unhideAllCards();
        });
    });

    // Add event listener to the "None" checkbox
    document.getElementById('none').addEventListener('change', function () {
        const checkboxes = document.querySelectorAll('input[name="socialmedia"]');
        
        if (this.checked) {
            // If "None" is checked, disable other checkboxes in the same group
            checkboxes.forEach(checkbox => {
                if (checkbox.id !== 'none') {
                    checkbox.disabled = true;
                    checkbox.checked = false; // Uncheck other checkboxes
                }
            });
        } else {
            // If "None" is unchecked, enable other checkboxes
            checkboxes.forEach(checkbox => {
                checkbox.disabled = false;
            });
        }
    });
</script>


