            flex-direction: row;
            /* Display radio buttons and labels in a row */
            align-items: center;
            /* Center items vertically */
            width: 450px;
            justify-content: center;
        }

        .radio-group {
            margin-right: 10px;
            /* Adjust the spacing between radio buttons */
            margin-left: 10px;
        }

        @media only screen and (max-width: 768px) {
            body {
                background-size: auto;
                /* Adjust as needed */
            }

            .container {
                margin-top: 50px;
                /* Adjust as needed */
                width: 100%;
                max-width: none;
            }

            .card {
                height: 70%;
                /* Adjust as needed */
                width: 90%;
                /* Adjust as needed */
                margin-top: 10vh;
                /* Adjust as needed */
            }

            h1 {
                font-size: 3vh;
                /* Adjust as needed */
            }

            .input-container {
                width: 100%;
            }

            select {
                width: 100%;
            }
        }
    </style>
