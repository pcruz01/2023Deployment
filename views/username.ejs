        }

        .card-content {
            display: flex;
            flex-direction: column;
            /* Adjust to a column layout */
            align-items: center;
            justify-content: space-between;
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            transform: translateY(-50%);
        }

        .centered-questions {
            display: flex;
            flex-direction: column;
            align-items: center;
            /* Center the questions horizontally */
            text-align: center;
            margin-top: 20px;
        }

        .arrow-icon {
            font-size: 24px;
            /* Adjust the size as needed */
        }

        .card {
            margin-top: 50px;
            background-color: white;
            height: 650px;
            width: 900px;
            position: absolute;
            object-fit: cover;
            object-position: left;
            z-index: -1;
            border-radius: 30px;

            /* Center the card horizontally and vertically */
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);

            /* Adjusted styles for the h1 tag */
            text-align: center;
            padding-top: 20px;
        }


        .button-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            /* margin-top: 20px; Adjust as needed */
        }

        .button-left {
            margin-left: 20px;
        }

        .button-right {
            order: 2;
            margin-right: 20px;
