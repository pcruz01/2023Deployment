            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            border: 2px solid #009DFF;
            border-radius: 5px;
            color: #ffffff;
            background-color: #009DFF;
            transition: background-color 0.3s;
            font-family: 'Raleway', sans-serif;
        }

        button:hover {
            background-color: white;
            color: #009DFF;
        }

        .input-container {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            /* Align items to the left */
            margin-bottom: 10px;
            width: 450px;
        }

        .input-typed {
            width: 350px;
        }

        .checkbox-container {
            display: flex;
            flex-direction: column;
            /* Ensure checkboxes are in a row */
            align-items: flex-start;
        }

        .checkbox-group {
            margin-right: 20px;
            /* Adjust the spacing between checkboxes and labels */
        }

        label {
            margin-bottom: 5px;
            /* Optional: Adjust the space between label and input */
            color: black;
            font-size: large;
            font-weight: 600;
        }

        select {
            width: 350px;
        }

        input[type="checkbox"] {
            /* Your styles for checkbox inputs */
            margin-left: 10px;
